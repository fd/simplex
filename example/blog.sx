package main

import (
	"github.com/fd/simplex/runtime"
	"time"
)

type (
	Post struct {
		Title       string
		Body        string
		Author      string
		PublishedAt time.Time
	}
)

var (
	posts = make(table[string]Post)
)

func init() {
	runtime.Void(posts.select(func(p Post) bool {
		if len(p.Title) > len("Hello World! (1") {
			return true
		}
		return false
	}))
}
