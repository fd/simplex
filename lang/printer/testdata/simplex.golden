package p

doct a_document() html {
	A-Header:	some header value
	Another-Header	= cool()


	<h1>{{ title }}</h1>
	{{{ body }}}

	<ul>
		<li>A list item</li>
		<li>A list item</li>
		<li>A {{ item() }} item</li>
